<div class="row">
    <div class="col-md-3 m-3">
        <div class="card">
            <div class="card-header text-center">
                <h2>Form Photo</h2>
            </div>
            <form action="/images/add" method="POST" class="card-body" enctype="multipart/form-data">
                <div class="input-group mb-3">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" autofocus required
                            id="inputGroupFile01">
                        <label class="custom-file-label" for="inputGroupFile01">Upload</label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" name="title" required placeholder="Title" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="description" required placeholder="Description" class="form-control"
                        rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Save</button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-8 m-3">
        <table class="table table-dark table-hover table-striped text-center">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created_At</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{createdAt}}</td>
                    <td>
                        <a href="{{imageUrl}}" class="btn btn-info" target="_blank">View</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>